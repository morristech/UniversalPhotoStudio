<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
         <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuTheme" parent="android:Theme.NoTitleBar" />

    <style name="AppTheme.Black">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <!-- photo grid layout -->
    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>

    <style name="MenuListHeader">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#383838</item>
        <item name="android:height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="PhotoDetailSection" parent="MenuListHeader">
        <item name="android:height">30dp</item>
    </style>
    
    <style name="PicornerButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/picorner_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
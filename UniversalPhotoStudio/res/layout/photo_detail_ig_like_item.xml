<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/activatedBackgroundIndicator" >

    <ImageView
        android:id="@+id/detail_ig_like_avator"
        android:layout_width="@dimen/photo_detail_user_avator_size"
        android:layout_height="@dimen/photo_detail_user_avator_size"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:paddingLeft="5dp"
        android:src="@drawable/empty_photo"
        android:scaleType="centerCrop" />

    <TextView
        android:gravity="left|center"
        android:id="@+id/detail_ig_like_user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/detail_ig_like_avator"
        android:layout_alignTop="@id/detail_ig_like_avator"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/detail_ig_like_avator"
        android:paddingLeft="5dp" />

</RelativeLayout>
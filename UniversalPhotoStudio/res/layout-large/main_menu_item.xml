<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item_container"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <RelativeLayout
        android:id="@+id/menu_item_container_2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/nav_item_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            android:paddingLeft="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nav_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/nav_item_image"
            android:paddingLeft="5dp"
            android:textColor="@color/menu_item_text" />
    </RelativeLayout>

</FrameLayout>